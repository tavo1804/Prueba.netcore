@model IEnumerable<prjSegundoCrud.Models.Usuario>
@{
    ViewData["Title"] = "Lista de Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="contenedor">
        <hgroup>
            <h2>ADMINISTRACION DE USUARIOS</h2>
        </hgroup>
        

        <div class="btn__group">
            <div>
                <a asp-action="Create" asp-controller="Usuario" class="btn btn__nuevo">Agregar Usuario</a>
            </div>
        </div>
        <br />
        <form method="post">
            @if (Model.Count() > 0)
            {
                <table>
                    <tr class="head">
                        <th>@Html.DisplayNameFor(m => m.Identificacion)</th>
                        <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                        <th>@Html.DisplayNameFor(m => m.Apellido)</th>
                        <th>@Html.DisplayNameFor(m => m.Correo)</th>
                        <th>@Html.DisplayNameFor(m => m.User)</th>

                        <th colspan="2">Acciones</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr align="center">
                            <td>@Html.DisplayFor(m => item.Identificacion)</td>
                            <td>@Html.DisplayFor(m => item.Nombre)</td>
                            <td>@Html.DisplayFor(m => item.Apellido)</td>
                            <td>@Html.DisplayFor(m => item.Correo)</td>
                            <td>@Html.DisplayFor(m => item.User)</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn__update">Editar</a>
                            </td>
                            <td>
                                <button asp-action="Delete" asp-route-id="@item.Id" class="btn__delete" onclick="return confirm('Esta seguro de eliminar el registro?')">Borrar</button>
                            </td>
                        </tr>
                    }
                </table>
            }
            else
            {
                <p align="center">No existen usuarios creados</p>
            }
        </form>
    </div>
